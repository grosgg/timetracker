<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row">
    <%= f.label :email, class: "column one-third" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "column one-half" %>
  </div>

  <div class="field row">
    <%= f.label :password, class: "column one-third" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "column one-half" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field row">
      <%= f.label :remember_me, class: "remember-me" %>
      <%= f.check_box :remember_me, class: "remember-me" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
